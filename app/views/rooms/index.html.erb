<!-- app/views/rooms/index.html.erb -->
<div class="hidden only:block">
  <div class="py-8 px-4 mx-auto max-w-screen-xl text-center">
    <h1 class="mb-4 text-lg font-extrabold tracking-tight leading-none text-white">Waiting for members to join</h1>
    <p class="text-md font-normal px-64 text-gray-400">Waiting for members to participate in this incredible experience</p>
  </div>
</div>

<div class="mt-10 mx-auto max-w-screen-xl p-4">
  <div class="grid grid-cols-3 gap-4">
    <% @rooms.each do |room| %>
      <div class="bg-white rounded-md p-4">
        <h2 class="text-lg font-semibold mb-2"><%= room.name %></h2>
        <%= link_to 'Join Room', room_path(room.id), class: 'bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 mb-4 ml-4' %>
      </div>
    <% end %>
  </div>
</div>
